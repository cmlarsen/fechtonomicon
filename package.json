{
  "name": "fechtonomicon",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "ios:device": "expo run:ios --device",
    "ios:device:release": "expo run:ios --device --configuration Release",
    "web": "expo start --web",
    "build:web": "npx expo export --platform web --output-dir web-build && node scripts/fix-web-build.js",
    "build:ios": "./scripts/build-ios.sh",
    "build:android": "./scripts/build-android.sh",
    "submit:ios": "./scripts/submit-ios.sh",
    "submit:android": "./scripts/submit-android.sh",
    "test": "jest --watch",
    "test:ci": "jest --ci",
    "clean:ios": "cd ios && rm -rf build && xcodebuild clean && cd ..",
    "rebuild:ios": "yarn clean:ios && cd ios && pod install && cd .. && yarn ios",
    "clean:watchman": "watchman watch-del '/Users/caleb/CalebApps/fechtonomicon' ; watchman watch-project '/Users/caleb/CalebApps/fechtonomicon'",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write --unsafe . || true",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check --write --unsafe . || true",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "typecheck:verbose": "tsc --noEmit --pretty",
    "validate": "yarn format:check && yarn lint && yarn typecheck",
    "validate:fix": "yarn format && yarn lint:fix && yarn check:fix; yarn typecheck || echo '⚠️  Some type errors remain - these require manual fixes'",
    "precommit": "yarn validate"
  },
  "dependencies": {
    "@expo-google-fonts/cormorant-garamond": "^0.4.1",
    "@expo-google-fonts/texturina": "^0.4.2",
    "@octokit/rest": "^22.0.1",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-navigation/bottom-tabs": "^7.8.2",
    "@react-navigation/native": "^7.1.19",
    "@react-navigation/stack": "^7.6.2",
    "expo": "~54.0.22",
    "expo-application": "~7.0.7",
    "expo-device": "~8.0.9",
    "expo-file-system": "~19.0.17",
    "expo-font": "^14.0.9",
    "expo-image": "^3.0.10",
    "expo-linear-gradient": "^15.0.7",
    "expo-localization": "~17.0.7",
    "expo-splash-screen": "~31.0.10",
    "expo-status-bar": "~3.0.8",
    "posthog-react-native": "^4.10.7",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-nitro-modules": "^0.31.4",
    "react-native-reanimated": "^4.1.3",
    "react-native-reanimated-carousel": "^4.0.3",
    "react-native-safe-area-context": "^5.6.2",
    "react-native-screens": "~4.16.0",
    "react-native-svg": "^15.14.0",
    "react-native-web": "^0.21.2",
    "react-native-web-webview": "^0.1.0",
    "react-native-webview": "13.15.0",
    "react-native-worklets": "0.5.1",
    "react-native-worklets-core": "^1.6.2",
    "react-native-youtube-iframe": "^2.4.1",
    "zustand": "4.5.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "@expo/prebuild-config": "^54.0.6",
    "@netlify/functions": "^5.1.0",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "29.5.14",
    "@types/node": "^24.10.0",
    "@types/react": "~19.1.0",
    "jest": "^29.7.0",
    "jest-expo": "^54.0.13",
    "react-native-svg-transformer": "^1.5.1",
    "typescript": "~5.9.2"
  },
  "private": true
}
